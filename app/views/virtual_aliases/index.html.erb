<p id="notice"><%= notice %></p>

<h1>Virtual Aliases</h1>

<table>
  <thead>
    <tr>
      <th>Virtual domain</th>
      <th>Source</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_aliases.each do |virtual_alias| %>
      <tr>
        <td><%= virtual_alias.virtual_domain %></td>
        <td><%= virtual_alias.source %></td>
        <td><%= virtual_alias.destination %></td>
        <td><%= link_to 'Show', virtual_alias %></td>
        <td><%= link_to 'Edit', edit_virtual_alias_path(virtual_alias) %></td>
        <td><%= link_to 'Destroy', virtual_alias, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

