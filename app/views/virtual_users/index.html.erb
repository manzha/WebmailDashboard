<p id="notice"><%= notice %></p>

<h1>Virtual Users</h1>

<table>
  <thead>
    <tr>
      <th>Virtual domain</th>
      <th>Password</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_users.each do |virtual_user| %>
      <tr>
        <td><%= virtual_user.virtual_domain %></td>
        <td><%= virtual_user.password %></td>
        <td><%= virtual_user.email %></td>
        <td><%= link_to 'Show', virtual_user %></td>
        <td><%= link_to 'Edit', edit_virtual_user_path(virtual_user) %></td>
        <td><%= link_to 'Destroy', virtual_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Virtual User', new_virtual_user_path %>
